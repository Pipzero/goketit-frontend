                      i.fa.fa-ellipsis-h
                      //- i.fa.fa-check
                  .status
                    strong.d-block En Route
                    //- em.d-inline-block.timestamp 7:32pm
                  
                .step.delivery
                  .indicator
                    .blip.off
                      //- i.fa.fa-check
                      //- i.fa.fa-ellipsis-h
                  .status
                    strong.d-block Delivered
                    //- em.d-inline-block.timestamp 7:42pm
                  
      section
        article
          .inner-block
            header.courier-toolbar
